@page "/ClientOrTrainer"
@inject NavigationManager NavManager
@rendermode InteractiveServer
<div class="header">
        <div class="title">Do you want to be a Client or a Trainer?</div>
    </div>
<div class="container">

    <div class="buttons_div">
        <button type="button" class="button" @onclick="() => ClientRegister()">Client</button>
        <button type="button" class="button" @onclick="() => TrainerRegister()">Trainer</button>
    </div>
</div>
@code {
    public void ClientRegister()
    {
        NavManager.NavigateTo("/register");
    }
    public void TrainerRegister()
    {
        NavManager.NavigateTo("/TrainerRegister");
    }
}
